# API subdomain - Main Laravel application (HTTP)
server {
    listen 80;
    server_name api.localtest.me;
    access_log /dev/stdout json_combined;
    error_log /dev/stderr;
    return 301 https://$server_name$request_uri;
}

# API subdomain - Main Laravel application (HTTPS)
server {
    listen 443 ssl http2;
    server_name api.localtest.me;
    root /var/www/html/public;
    index index.php;
    
    access_log /dev/stdout json_combined;
    error_log /dev/stderr;
    
    ssl_certificate /var/www/html/certs/_wildcard.localtest.me+4.pem;
    ssl_certificate_key /var/www/html/certs/_wildcard.localtest.me+4-key.pem;
    
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php8.4-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;
        fastcgi_param HTTP_HOST $host;
        fastcgi_param SERVER_NAME $host;
        fastcgi_param X_FORWARDED_HOST $host;
        fastcgi_param X_FORWARDED_PROTO $scheme;
        fastcgi_param HTTPS on;
        
        # Increase timeouts
        fastcgi_connect_timeout 300s;
        fastcgi_send_timeout 300s;
        fastcgi_read_timeout 300s;
    }
    
    location ~ /\.(?!well-known).* {
        deny all;
    }
}

